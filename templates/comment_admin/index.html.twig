{% extends 'base_admin.html.twig' %}

{% block manager_name %}
    Manage Comment
{% endblock %}

{% block add %}
    <a href="#" class="bg-success p-2 rounded text-light">Add comment</a>
{% endblock %}

{% block entity_title %}
    Author
{% endblock %}

{% block var1 %}
    Content
{% endblock %}

{% block main_content %}
    {% for comment in comments %}
        <tr>
            <td>
                <a href="">
                    {{ comment.article.title }}
                </a>
            </td>
            <td>
                {{ comment.authorName }}
            </td>
            <td style="width: 20%">
                {{ comment.content|truncate }}
            </td>
            <td>
                {{ comment.createdAt|time_diff }}
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4" class="text-center">
                No articles found
            </td>
        </tr>
    {% endfor %}
{% endblock %}