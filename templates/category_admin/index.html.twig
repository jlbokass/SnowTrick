{% extends 'base_admin.html.twig' %}

{% block manager_name %}
    Manage Category
{% endblock %}

{% block add %}
    <a href="{{ path('add_category') }}" class="bg-success p-2 rounded text-light">Add category</a>
{% endblock %}

{% block entity_title %}
    Name
{% endblock %}

{% block var1 %}
    Content
{% endblock %}

{% block main_content %}
    {% for category in categories %}
        <tr>
            <td>
                <a href="">
                    {{ category.title }}
                </a>
            </td>
            <td>
                {{ category.author.firstName }}
            </td>
            <td style="width: 20%">
                {{ category.content|truncate }}
            </td>
            <td>
                {{ category.createdAt|time_diff }}
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4" class="text-center">
                No articles found
            </td>
        </tr>
    {% endfor %}
{% endblock %}