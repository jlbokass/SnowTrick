{% extends 'base_admin.html.twig' %}

{% block title %}
    Admin category
{% endblock %}

{% block manager_name %}
    Manage Category
{% endblock %}

{% block add %}
    <a href="{{ path('add_category') }}" class="bg-success p-2 rounded text-light">Add category</a>
{% endblock %}

{% block entity_title %}
    Name
{% endblock %}

{% block var1 %}
    Content
{% endblock %}

{% block main_content %}
    {% for category in categories %}
        <tr>
            <td>
                <a href="">
                    {{ category.title }}
                </a>
            </td>
            <td>
                {{ category.author }}
            </td>
            <td style="width: 20%">
                {{ category.content|truncate }}
            </td>
            <td>
                {{ category.createdAt|time_diff }}
            </td>
            <td>
                <button class="btn btn-sm btn-outline-warning" onclick="javascritp:location.href='{{ path('edit_category', {id: category.id}) }}'">
                    <i class="fas fa-pencil-alt"></i>
                </button>
            </td>
            <td>
                <button type="button" class="btn btn-sm btn-outline-danger" data-toggle="modal" data-target="#myModal">
                    <i class="fas fa-trash-alt"></i>
                </button>

                <!-- The Modal -->
                <div class="modal fade" id="myModal">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">

                            <!-- Modal Header -->
                            <div class="modal-header">
                                <h4 class="modal-title">Modal Heading</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>

                            <!-- Modal body -->
                            <div class="modal-body">
                                Delete category <strong>{{ category.title }}</strong> with all those articles?
                            </div>

                            <!-- Modal footer -->
                            <div class="modal-footer">
                                <button type="reset" class="btn btn-danger" onclick="javascritp:location.href='{{ path('delete_category', {id : category.id}) }}'" data-dismiss="modal">Delete</button>
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>

                        </div>
                    </div>
                </div>

            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4" class="text-center">
                No articles found
            </td>
        </tr>
    {% endfor %}
{% endblock %}