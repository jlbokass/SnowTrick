{% extends 'base_admin.html.twig' %}

{% block title %}
    Admin category
{% endblock %}

{% block manager_name %}
    Manage Category
{% endblock %}

{% block add %}
    <a href="{{ path('add_category') }}" class="bg-success p-2 rounded text-light">Add category</a>
{% endblock %}

{% block entity_title %}
    Name
{% endblock %}

{% block var1 %}
    Content
{% endblock %}

{% block main_content %}
    {% for category in categories %}
        <tr>
            <td>
                <a href="">
                    {{ category.title }}
                </a>
            </td>
            <td>
                {{ category.author }}
            </td>
            <td style="width: 20%">
                {{ category.content|truncate }}
            </td>
            <td>
                {{ category.createdAt|time_diff }}
            </td>
            <td>
                <button class="btn btn-sm btn-outline-warning" onclick="javascritp:location.href='{{ path('edit_category', {id: category.id}) }}'">
                    <i class="fas fa-pencil-alt"></i>
                </button>
            </td>
            <td>
                <button class="btn btn-sm btn-outline-danger">
                    <i class="fas fa-trash-alt"></i>
                </button>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4" class="text-center">
                No articles found
            </td>
        </tr>
    {% endfor %}
{% endblock %}