{% extends 'base.html.twig' %}

{% block title %}
    Add a category
{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 100px; margin-bottom: 100px">
        <h1>Add a category</h1>
        <div class="row">
            <div class="col-sm-12">
                {% include 'category_admin/categoryForm.html.twig' %}
                <button type="submit" class="btn btn-success">Add</button>
                <button type="reset" class="btn btn-info" onclick="javascritp:location.href='{{ path('admin_category_index') }}'">Cancel</button>
                {{ form_end(categoryForm) }}
            </div>
        </div>
    </div>
{% endblock %}
