{% extends 'base.html.twig' %}



{% block title %}Welcome to Snowtrick{% endblock %}

{% block body %}
    <!-- Fullscreen image -->
    <div class="image-fullscreen mt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <h1 class="mt-5">Share your Passion!</h1>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Deserunt voluptates rerum eveniet sapiente repellat esse, doloremque quod recusandae deleniti nostrum assumenda vel beatae sed aut modi nesciunt porro quisquam voluptatem.</p>
                </div>
            </div>
        </div>
    </div>

<!-- Article -->
<div class="mt-5">
    <div class="container">
        <!-- Page Features -->
        <div class="row text-center">

            {% for article in articles %}
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="card h-100">
                        <img class="card-img-top" src="{{ asset(article.imagePath) }}" alt="test">
                        <div class="card-footer d-flex align-items-baseline">
                            <div>
                                <h5 class="card-title"><a href="{{ path('article_show', {slug: article.slug}) }}">{{ article.title }}</a></h5>
                            </div>
                            {% if is_granted('ROLE_USER') %}
                                <div class="ml-auto d-flex align-items-baseline">
                                    <div class="mr-2">
                                        <button class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-pencil-alt"></i>
                                        </button>
                                    </div>
                                    <div>
                                        <button class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
