{% extends 'base.html.twig' %}



{% block title %}Read: {{ article.title }}{% endblock %}

{% block body %}
    <div>
        <!-- Article images -->
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12" style="margin: 0; padding: 0; height: 30%">
                    <img src="{{ asset('uploads/article_image/'~'snow4.jpg') }}" alt="" height="450" class="w-100 img-responsive">
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                {% for image in article.images %}
                    <div class="col-sm-2">
                        <img src="{{ asset('uploads/article_image/'~image.imageFilename) }}" alt="" width="200px">
                    </div>
                {% endfor %}
            </div>
        </div>
        <!-- Article content -->
        <div class="container">
            <div class="row">
                <div class="col-sm-12 p-3">
                    <h3>{{ article.title }} <small class="text-info"> by {{ article.user.username }}</small></h3>
                    <p>{{ article.content }}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm-12 text-center">
                <p>
                    <button class="btn btn-outline-dark btn-sm">{{ article.publishedAt? article.publishedAt|time_diff : 'unpublished' }}</button>
                    <button class="btn btn-outline-dark btn-sm">Category: <span class="text-primary">{{ article.category.title }}</span></button>
                </p>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h4><i class="pr-3 fa fa-comment"></i>{{ article.comments|length }} Comments</h4>
                <hr>
                <div class="row mb-5">
                    {% if app.user %}
                    <div class="col-sm-12">
                        <img class="comment-img rounded-circle" src="{{ asset('images/astronaut-profile.png') }}">
                        <div class="comment-container d-inline-block pl-3 align-top">
                            <span class="commenter-name">{{ app.user.username }}</span>
                            {% include 'article/formComment.html.twig' %}
                            <button type="submit" class="btn btn-info">Comment</button>
                            {{ form_end(formComment) }}
                        </div>
                        {% endif %}
                    </div>
                </div>

                <div class="row">
                    {% for comment in article.comments %}
                        <div class="col-sm-12">
                            <img class="comment-img rounded-circle" src="{{ asset('images/alien-profile.png') }}">
                            <div class="comment-container d-inline-block pl-3 align-top">
                                <span class="commenter-name">{{ comment.user.username }}</span>
                                <small>{{ comment.createdAt|time_diff }}</small>
                                <br>
                                <span class="comment"> {{ comment.content }}</span>
                                <p><a href="#">Reply</a></p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
