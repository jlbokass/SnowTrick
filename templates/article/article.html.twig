{% extends 'base.html.twig' %}



{% block title %}all articles{% endblock %}

{% block body %}
    <!-- Article detaile -->

    <div class="container" style="margin-top: 100px">
        <div class="row text-center">
            {% for article in articles %}
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="card h-100">
                        <img class="card-img-top" src="{{ asset(article.imagePath) }}" alt="test">
                        <div class="card-footer d-flex align-items-baseline">
                            <div>
                                <h5 class="card-title"><a href="{{ path('article_show', {slug: article.slug}) }}">{{ article.title }}</a></h5>
                            </div>
                            <div class="ml-auto d-flex align-items-baseline">
                                <div class="mr-2">
                                    <button class="btn btn-sm btn-outline-warning">
                                        <i class="fas fa-pencil-alt"></i>
                                    </button>
                                </div>
                                <div>
                                    <button class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
