{% form_theme articleForm 'article_admin/fields.html.twig' %}

{{ form_start(articleForm, {
    'attr': {
        'novalidate': 'novalidate'
        }
    })
}}

<div class="form-group">
    {{ form_row(articleForm.title) }}
</div>

<div class="form-group">
    {{ form_row(articleForm.content) }}
</div>

<div class="form-group">
    {{ form_row(articleForm.category) }}
</div>

<div class="form-group">
    <button type="submit" class="btn btn-info addImage mb-2">Add an image</button>
    <div class="card bg-warning text-white p-3 text-center" style="display: none">
        <span class="">Something wrong</span>
    </div>

    {{ form_row(articleForm.images, {
        'attr': {
            'placeholder': 'Select an image'
        }
    }) }}

</div>
