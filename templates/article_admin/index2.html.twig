{% extends 'base_admin.html.twig' %}

{% block manager_name %}
    Manage Article
{% endblock %}

{% block entity_title %}
    Title
{% endblock %}

{% block var1 %}
    Category
{% endblock %}

{% block main_content %}
    {% for article in articles %}
        <tr>
            <td>
                <a href="">
                    {{ article.title }}
                </a>
            </td>
            <td>
                {{ article.author }}
            </td>
            <td style="width: 20%">
                {{ article.category.title }}
            </td>
            <td>
                {{ article.createdAt|time_diff }}
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4" class="text-center">
                No articles found
            </td>
        </tr>
    {% endfor %}
{% endblock %}